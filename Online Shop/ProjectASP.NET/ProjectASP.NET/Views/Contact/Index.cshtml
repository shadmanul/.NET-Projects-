    <section id="contact-page">
        <div class="container">
            <div class="center">        
                <h2>Drop Your Message</h2>
                <p class="lead">Send us Feedbacks about our site</p>
            </div> 
            <div class="row contact-wrap"> 
                <div class="status alert alert-success" style="display: none"></div>
                @using (Html.BeginForm())
                {
                    
                    <div>
                        <label>Subject *</label>
                        <input type="text" name="subjectTB" class="form-control" required />
                    </div>
                    <div >
                    <br />
                        <label>Message *</label>
                        <textarea name="messageTB" id="message" required="required" class="form-control" rows="8" required></textarea>
                    </div>  
                    <br />                      
                    <div >
                        <input type="submit" name="submit" value="Send Message" class="form-control btn-success" />
                    </div>
                    
                } 
            </div><!--/.row-->
        </div><!--/.container-->
    </section><!--/#contact-page-->